model Commnet {
  id        String        @id @default(uuid())
  content   String        @db.Text
  autherId  String
  postId    String
  post      Post          @relation(fields: [postId], references: [id],onDelete: Cascade)
  parentId  String?
  parent    Commnet?      @relation("CommentReplies", fields: [parentId], references: [id],onDelete: Cascade)
  replies   Commnet[]     @relation("CommentReplies")
  status    CommnetStatus @default(APPROVED)
  createdId DateTime      @default(now())
  updatedId DateTime      @updatedAt

  @@index([postId])
  @@index([autherId])
  @@map("comments")
}



enum CommnetStatus {
  APPROVED
  REJECT
}